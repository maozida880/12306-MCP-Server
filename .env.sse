# SSE 模式专用配置
NODE_ENV=production
TRANSPORT_MODE=sse

# 服务器配置
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# 会话池配置（SSE 模式建议更大的池）
SESSION_POOL_MIN_SIZE=3
SESSION_POOL_MAX_SIZE=10
SESSION_TTL=1800000
MAINTENANCE_INTERVAL=300000

# 性能配置
MAX_RETRIES=3
RETRY_DELAY=1000

# 日志配置
LOG_LEVEL=info

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090
