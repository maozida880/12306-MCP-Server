{
  "name": "12306-mcp-server",
  "version": "1.0.1",
  "description": "一个为大型语言模型（LLM）设计的、高可用的12306余票查询工具服务，搭载智能会话管理引擎。支持 get-tickets、get-interline-tickets、get-train-route-stations、get-station-code 等查询工具。",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "bin": {
    "12306-mcp": "./build/index.js",
    "12306-mcp-server": "./build/index.js"
  },
  "files": [
    "build/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "start": "node build/index.js",
    "start:http": "node build/index.js --port 8080",
    "start:sse": "node build/index.js --port 8080 --transport sse",
    "start:sse:prod": "NODE_ENV=production node build/index.js --host 0.0.0.0 --port 8080 --transport sse",
    "start:modelscope": "node build/index.js --port 8080 --host 127.0.0.1 2>&1",
    "dev:sse": "ts-node src/index.ts --port 8080 --transport sse",
    "build": "tsc && npm run fix-shebang",
    "build:watch": "tsc --watch",
    "fix-shebang": "node scripts/fix-shebang.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "dev": "ts-node src/index.ts",
    "clean": "rm -rf build",
    "prepublishOnly": "npm run clean && npm run build",
    "postinstall": "node -e \"console.log('\\n✅ 12306-MCP-Server installed successfully!\\nRun: 12306-mcp\\n')\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maozida880/12306-mcp-server.git"
  },
  "keywords": [
    "12306",
    "mcp",
    "model-context-protocol",
    "llm",
    "ai-agent",
    "claude",
    "chatgpt",
    "train",
    "ticket",
    "railway",
    "china-railway",
    "火车票",
    "火车票查询",
    "余票查询",
    "中转换乘"
  ],
  "author": {
    "name": "maozida880",
    "url": "https://github.com/maozida880"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/maozida880/12306-mcp-server/issues"
  },
  "homepage": "https://github.com/maozida880/12306-mcp-server#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "axios": "^1.7.2",
    "commander": "^12.0.0",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.1.3",
    "mcp-http-server": "^1.2.4",
    "tslib": "^2.8.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
